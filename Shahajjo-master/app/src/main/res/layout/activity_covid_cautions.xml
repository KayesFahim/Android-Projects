<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/graylight"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/titletop"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/covid19title"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:textColor="@color/color_one"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="COVID 19 PreCautions" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitle1"
        android:layout_below="@+id/titletop"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Individual Safety Precautions:" />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/subtitle1"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cautionsrv1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitle2"
        android:layout_below="@+id/cautionsrv1"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Social Safety Precautions:" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/subtitle2"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/cautionsrv2"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitle3"
        android:layout_below="@+id/cautionsrv2"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Transport Safety Precautions:" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/subtitle3"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/cautionsrv3"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtitle4"
        android:layout_below="@+id/cautionsrv3"
        android:textSize="25dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="Workplace Safety Precautions :" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/subtitle4"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cautionsrv4"
        android:layout_height="wrap_content" />



</RelativeLayout>
</ScrollView>