<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_bg"
    tools:context=".gamelevel.Level_1">

    <TextView
        android:id="@+id/task1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task - 1" />

    <ImageView
        android:id="@+id/img1"
        android:layout_below="@id/task1"
        android:layout_width="300sp"
        android:src="@drawable/bangladesh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="150sp" />


    <TextView
        android:id="@+id/cans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ans"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ab"
            android:layout_below="@id/cans"
            android:orientation="horizontal">

            <Button
                android:layout_width="150sp"
                android:id="@+id/ans1"
                android:background="@drawable/button_design"
                android:layout_height="wrap_content"
                android:text="India"
                android:layout_marginRight="5sp"/>

            <Button
                android:layout_width="150sp"
                android:id="@+id/ans2"
                android:background="@drawable/button_design"
                android:layout_height="wrap_content"
                android:text="Pakistan"
                android:layout_marginLeft="5sp"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/ab"
        android:orientation="horizontal">

        <Button
            android:layout_width="150sp"
            android:id="@+id/ans3"
            android:background="@drawable/button_design"
            android:layout_height="wrap_content"
            android:text="Srilanka"
            android:layout_marginRight="5sp"/>

        <Button
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/Ans"
            android:background="@drawable/button_design"
            android:text="Bangladesh"
            android:layout_marginLeft="5sp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</RelativeLayout>