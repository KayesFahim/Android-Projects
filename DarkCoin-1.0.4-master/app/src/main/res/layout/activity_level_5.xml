<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_bg"
    tools:context=".gamelevel.Level_5">

    <TextView
        android:id="@+id/task1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task - 5" />

    <ImageView
        android:layout_below="@id/task1"
        android:layout_width="wrap_content"
        android:src="@drawable/bahrain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ans"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ab"
            android:layout_below="@id/cans"
            android:orientation="horizontal">

            <Button
                android:layout_width="150sp"
                android:id="@+id/ans1"
                android:background="@drawable/button_design"
                android:layout_height="wrap_content"
                android:text="Soudi Arab"
                android:layout_marginRight="5sp"/>

            <Button
                android:layout_width="150sp"
                android:id="@+id/ans2"
                android:background="@drawable/button_design"
                android:layout_height="wrap_content"
                android:text="Armenia"
                android:layout_marginLeft="5sp"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_below="@id/ab"
        android:orientation="horizontal">

        <Button
            android:layout_width="150sp"
            android:id="@+id/ans3"
            android:background="@drawable/button_design"
            android:layout_height="wrap_content"
            android:text="Turosku"
            android:layout_marginRight="5sp"/>

        <Button
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/Ans"
            android:background="@drawable/button_design"
            android:text="Bahrain"
            android:layout_marginLeft="5sp"/>


    </LinearLayout>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner"
            android:id="@+id/lv5ad"/>

</RelativeLayout>